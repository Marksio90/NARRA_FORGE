# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration
POSTGRES_USER=narraforge
POSTGRES_PASSWORD=narraforge_secure_password_change_me
POSTGRES_DB=narraforge
POSTGRES_HOST=narraforge-postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=narraforge-redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# Application Configuration
SECRET_KEY=generate_random_64_character_string_for_production_use_here
API_V1_PREFIX=/api
DEBUG=false
ENVIRONMENT=production

# Flower Monitoring (change in production!)
FLOWER_USER=admin
FLOWER_PASSWORD=changeme

# Frontend API URL (set to your domain in production)
REACT_APP_API_URL=http://localhost:8000

# Model Configuration
DEFAULT_MODEL_TIER=1
GPT_4O_MINI=gpt-4o-mini
GPT_4O=gpt-4o
GPT_4=gpt-4
GPT_O1=o1

# Cost Limits
MAX_COST_PER_PROJECT=100.00
COST_ALERT_THRESHOLD=0.8

# Celery Configuration
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Storage
OUTPUT_DIR=/app/output
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
